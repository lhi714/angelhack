<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:orientation="vertical"
        android:background="@drawable/checklist_title_background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:gravity="top">

            <TextView
                android:layout_width="9dp"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:background="#17791d"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:text="CHECKLIST"
                android:textColor="#000000"
                android:textSize="30sp"
                android:textStyle="bold" />

        </LinearLayout>

            <TextView
                android:id="@+id/explain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:layout_marginLeft="40dp"
                android:textSize="16sp"
                android:text="Answer questions about your health status." />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp">
        <CheckBox
            android:id="@+id/checkbox1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:text="Allergies are severe"
            android:textSize="16sp"
            android:onClick="onCheckboxClicked"/>
        <CheckBox
            android:id="@+id/checkbox2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:text="Anemia is severe"
            android:textSize="16sp"
            android:onClick="onCheckboxClicked"/>
        <CheckBox
            android:id="@+id/checkbox3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:text="I feel fatigue easily"
            android:textSize="16sp"
            android:onClick="onCheckboxClicked"/>
        <CheckBox
            android:id="@+id/checkbox4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:text="I am constipated"
            android:textSize="16sp"
            android:onClick="onCheckboxClicked"/>
        <CheckBox
            android:id="@+id/checkbox5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:text="I have diarrhea"
            android:textSize="16sp"
            android:onClick="onCheckboxClicked"/>
        <CheckBox
            android:id="@+id/checkbox6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:text="I have a bad breath"
            android:textSize="16sp"
            android:onClick="onCheckboxClicked"/>
        <CheckBox
            android:id="@+id/checkbox7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:text="Athlete's foot is severe"
            android:textSize="16sp"
            android:onClick="onCheckboxClicked"/>
        <CheckBox
            android:id="@+id/checkbox8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:text="The skin is rough and the complexion is dark"
            android:textSize="16sp"
            android:onClick="onCheckboxClicked"/>
        <CheckBox
            android:id="@+id/checkbox9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:text="Eyes are tired"
            android:textSize="16sp"
            android:onClick="onCheckboxClicked"/>
        <CheckBox
            android:id="@+id/checkbox10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:text="Hangover is severe"
            android:textSize="16sp"
            android:onClick="onCheckboxClicked"/>
        <CheckBox
            android:id="@+id/checkbox11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:text="Heavy cold hands and feet"
            android:textSize="16sp"
            android:onClick="onCheckboxClicked"/>
        <CheckBox
            android:id="@+id/checkbox12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:text="I'm a smoker"
            android:textSize="16sp"
            android:onClick="onCheckboxClicked"/>

    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:layout_gravity="bottom"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <ImageButton
            android:id="@+id/previousButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:padding="0sp"
            android:scaleType="centerCrop"
            android:background="@android:color/transparent"
            android:layout_alignParentLeft="true"
            android:src="@drawable/previous_button" />

        <ImageButton
            android:id="@+id/nextButton2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
            android:padding="0sp"
            android:scaleType="centerCrop"
            android:background="@android:color/transparent"
            android:layout_alignParentRight="true"
            android:src="@drawable/next_button" />

    </RelativeLayout>

</LinearLayout>
